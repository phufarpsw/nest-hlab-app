generator client {
  provider = "prisma-client-js"
}

// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String               @id @default(uuid())
  translations ProductTranslation[]
}

model ProductTranslation {
  id          String  @id @default(uuid())
  language    String
  name        String
  description String
  productId   String
  product     Product @relation(fields: [productId], references: [id])
}
